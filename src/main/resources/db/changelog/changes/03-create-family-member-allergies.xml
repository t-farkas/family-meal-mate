<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-family-member-allergies" author="t-farkas">
        <createTable tableName="family_member_allergies">
            <column name="family_member_id" type="SERIAL">
                <constraints nullable="false"/>
            </column>
            <column name="allergies" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="family_member_allergies"
                columnNames="family_member_id, allergies"
                constraintName="pk_family_member_allergies"/>

        <addForeignKeyConstraint
                baseTableName="family_member_allergies"
                baseColumnNames="family_member_id"
                referencedTableName="family_member"
                referencedColumnNames="id"
                constraintName="fk_family_member"/>

    </changeSet>
</databaseChangeLog>