<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-meal-plan" author="t-farkas">
        <createTable tableName="meal_plan">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="household_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_mealplan_household"
                             references="household(id)"/>
            </column>
            <column name="week_start" type="DATE"/>
            <column name="is_template" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

        <addUniqueConstraint
                tableName="meal_plan"
                columnNames="household_id, week_start"
                constraintName="uk_household_week"/>

    </changeSet>

    <changeSet id="meal_slot" author="t-farkas">
        <createTable tableName="meal_slot">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="meal_plan_id" type="BIGINT"/>
            <column name="recipe_id" type="BIGINT"/>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="meal_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="VARCHAR(255)"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="meal_slot"
                baseColumnNames="meal_plan_id"
                constraintName="fk_mealslot_mealplan_delete"
                referencedTableName="meal_plan"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="meal_slot"
                baseColumnNames="recipe_id"
                constraintName="fk_mealslot_recipe_delete"
                referencedTableName="recipe"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>
    </changeSet>

</databaseChangeLog>