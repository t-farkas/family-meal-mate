<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="add-day-of-week-to-mealslot" author="t-farkas">
        <addColumn tableName="meal_slot">
            <column name="day_of_week" type="VARCHAR(10)" />
        </addColumn>
    </changeSet>

    <changeSet id="migrate-date-to-day-postgres" author="t-farkas" dbms="postgresql">
        <update tableName="meal_slot">
            <column name="day_of_week"
                    valueComputed="TRIM(UPPER(TO_CHAR(date, 'DAY')))"/>
        </update>
    </changeSet>

    <changeSet id="day-of-week-not-null-constraint" author="t-farkas">
        <addNotNullConstraint
                tableName="meal_slot"
                columnName="day_of_week"/>
    </changeSet>

    <changeSet id="drop-date-from-mealslot" author="t-farkas">
        <dropColumn tableName="meal_slot" columnName="date"/>
    </changeSet>

</databaseChangeLog>