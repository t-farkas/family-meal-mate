<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="migrate-measurements" author="t-farkas">
        <renameColumn
                tableName="recipe_ingredient"
                oldColumnName="quantitative_measurement"
                newColumnName="measurement"/>

        <renameColumn
                tableName="shopping_item"
                oldColumnName="quantitative_measurement"
                newColumnName="measurement"/>

        <update tableName="recipe_ingredient">
            <column name="measurement" valueComputed="qualitative_measurement"/>
            <where>measurement IS NULL AND qualitative_measurement IS NOT NULL</where>
        </update>

        <dropColumn tableName="recipe_ingredient" columnName="qualitative_measurement"/>
    </changeSet>

</databaseChangeLog>